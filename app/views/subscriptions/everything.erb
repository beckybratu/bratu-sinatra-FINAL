<h2><%= @user.name.capitalize %>, pick any number titles for your EVERYTHING subscription:</h2>

<form action="/show" method="POST">

  <%@titles.each do |title|%>
      <input type="checkbox" name="user[title][]" value="<%=title.id%>"><%=title%></input><br>
  <%end%>
  <br></br>

  <input type="submit" value="Confirm subscription">
</form>


